/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    // Definimos el kscan desde cero sin usar 'pro_micro'
    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN";
        input-gpios
            = <&xiao_d 7 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, 
              <&xiao_d 4 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    };
};

// Esto desactiva cualquier configuración previa que esté buscando 'pro_micro'
&kscan0 {
    status = "okay";
};
